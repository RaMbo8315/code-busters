<!-- Registration Form -->

<!-- Button to open the modal -->

<div id="id01" class="modal">
  <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">CLOSE</span>
  <form class="modal-content" action="index">
    <div class="container">
      <h2>
        <b>Sign Up For An Account</b>
      </h2>
      <p>Please fill in this form to create an account.</p>
      <hr>
      <div>
        <label for="fullName">
          <b>Full Name</b>
        </label>
        <input type="text" class="form-control" id="fullName" placeholder="Full Name" required>
      </div>
      
      <div>
        <label for="phoneNumber">
          <b>Phone Number</b>
        </label>
        <input class="form-control" type="tel" id="telephone" placeholder="1(555)555-5555" required>
      </div>

      <div>
        <label for="textinput">
          <b>Address Line 1</b>
        </label>
        <input type="text" id="address1" placeholder="Address Line 1" class="form-control" required>
      </div>

      <div>
        <label for="textinput">
          <b>Address Line 2</b>
        </label>
        <input type="text" id="address2" placeholder="Address Line 2" class="form-control" required>
      </div>

      <div>
        <label for="textinput">
          <b>City</b>
        </label>
        <input type="text" id="city" placeholder="City" class="form-control" required>
      </div>

      <div>
        <label for="textinput">
          <b>State</b>
        </label>
        <input type="text" id="state" placeholder="State" class="form-control" required>
      </div>

      <div>
        <label for="textinput">
          <b>Postal Code</b>
        </label>
        <input type="text" class="form-control" id="postalCode" placeholder="Postal Code" required>
      </div>

      <div>
        <label for="email">
          <b>Email</b>
        </label>
        <input type="email" class="form-control" id="email" placeholder="Enter Email" name="email" required>
      </div>

      <div>
        <label for="psw">
          <b>Password</b>
        </label>
        <input type="password" class="form-control" id="password" placeholder="Enter Password" name="psw" required>
      </div>

      <div>
        <label for="psw-repeat">
          <b>Repeat Password</b>
        </label>
        <input type="password" class="form-control" placeholder="Repeat Password" name="psw-repeat" required>
      </div>

      <div>
        <label>
          <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px">
        </label>
        <b> Remember me</b>
      </div>

      <div>
        <p>By creating an account you agree to our
          <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>
      </div>

      <div class="clearfix">
        <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
        <button type="submit" class="signup" id="createAccountBtn">Create an Account</button>
      </div>
    </div>
  </form>
</div>